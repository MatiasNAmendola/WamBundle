{% extends 'TrismegisteWamBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - run{% endblock %}

{% block content %}

<h1>Inference</h1>

<div class="block-demo">

   <div class="console">
   <form action="{{ path('_wam') }}" method="POST" id="console_form">
        {{ form_errors(form) }}

        {{ form_row(form.program) }}
        {{ form_row(form.query) }}

        {{ form_rest(form) }}
        <input type="submit" value="Query" class="symfony-button-grey" />
    </form>
    </div>

    <div class="output-block">
        <table>
        {% for row in output %}
        <tr>
            <td>{% if row.succeed %}success{% endif %}</td>
            {% for key, val in row.variable %}
                <td>{{ key }} = {{ val }}</td>
            {% endfor %}
            <td>{{ row.opCount }}</td>
            <td>{{ row.backtrackCount }}</td>
            <td>{{ 1000 * row.elapsedTime }}</td>
        </tr>
        {% endfor %}
        <table>
    </div>

</div>

{% endblock %}
